print("Demonstrating nested conditions and loops:");

let i = 1;

while i != 6 {
    let mut counter = 1;
    let target = 3;

    while counter != target {
        if i == counter {
            print("Number ");
            print(i);
            print(" matches the inner counter of ");
            print(counter);
        };
        counter = counter + 1;
    };

    if i == 2 {
        print("Number ");
        print(i);
        print(" is my favorite!");
    }

    if i == 4 {
